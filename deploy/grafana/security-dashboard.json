{
  "dashboard": {
    "title": "Security Dashboard",
    "tags": ["gateway", "agentcore", "security"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Success Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(gateway_auth_success_total[5m])) by (auth_method)",
            "legendFormat": "Success - {{auth_method}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(gateway_auth_failures_total[5m])) by (auth_method)",
            "legendFormat": "Failure - {{auth_method}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Attempts/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Authentication Failure Reasons",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (failure_reason) (rate(gateway_auth_failures_total[5m]))",
            "legendFormat": "{{failure_reason}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "pie",
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        }
      },
      {
        "id": 3,
        "title": "Authorization Denials",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (resource, action) (rate(gateway_authz_failures_total[5m]))",
            "legendFormat": "{{resource}} - {{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Denials/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Rate Limit Hits by Type",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (limit_type) (rate(gateway_rate_limit_hits_total[5m]))",
            "legendFormat": "{{limit_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Hits/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "DDoS Blocks",
        "type": "graph",
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (block_type, reason) (rate(gateway_ddos_blocks_total[5m]))",
            "legendFormat": "{{block_type}} - {{reason}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Blocks/sec"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "DDoS Attack Detected",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Suspicious Patterns Detected",
        "type": "graph",
        "gridPos": {"x": 12, "y": 14, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (pattern_type) (rate(gateway_ddos_suspicious_patterns_total[5m]))",
            "legendFormat": "{{pattern_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Patterns/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "TLS Handshakes by Version",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (tls_version) (rate(gateway_tls_handshakes_total[5m]))",
            "legendFormat": "{{tls_version}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Handshakes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "TLS Errors",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "sum by (error_type) (rate(gateway_tls_errors_total[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Top Failed Authentication IPs",
        "type": "table",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "topk(10, sum by (identifier) (rate(gateway_auth_failures_total[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "identifier": "IP Address",
                "Value": "Failures/sec"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "Active Sessions",
        "type": "stat",
        "gridPos": {"x": 12, "y": 26, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "gateway_sessions_active",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Session Duration",
        "type": "graph",
        "gridPos": {"x": 18, "y": 26, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(gateway_session_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(gateway_session_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      }
    ]
  }
}
