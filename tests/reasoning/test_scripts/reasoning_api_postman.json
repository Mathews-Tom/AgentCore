{
  "info": {
    "name": "AgentCore Reasoning API",
    "description": "Test collection for reasoning.bounded_context JSON-RPC method",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Simple Reasoning Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"method\": \"reasoning.bounded_context\",\n  \"params\": {\n    \"query\": \"What is 2+2?\",\n    \"temperature\": 0.7,\n    \"chunk_size\": 8192,\n    \"carryover_size\": 4096,\n    \"max_iterations\": 5\n  },\n  \"id\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/jsonrpc",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "jsonrpc"]
        },
        "description": "Basic reasoning request with all parameters"
      }
    },
    {
