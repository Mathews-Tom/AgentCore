# Multi-stage Docker build for DSPy Optimization Service
# Hardened for production deployment with GPU support
FROM python:3.12-slim AS builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install UV package manager
RUN pip install --no-cache-dir uv

# Set working directory
WORKDIR /app

# Copy dependency files
COPY pyproject.toml uv.lock README.md ./
COPY src/ ./src/

# Install dependencies (including DSPy and ML dependencies)
RUN uv sync --frozen --no-dev

# Production stage
FROM python:3.12-slim

# Security labels
LABEL maintainer="AgentCore Team"
LABEL version="0.1.0"
LABEL description="DSPy Optimization Service - Production"

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    libpq5 \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean \
    && groupadd -r -g 1001 dspy \
    && useradd -r -u 1001 -g dspy -d /app -s /sbin/nologin dspy

# Set working directory
WORKDIR /app

# Copy virtual environment and application from builder
COPY --from=builder --chown=dspy:dspy /app/.venv /app/.venv
COPY --from=builder --chown=dspy:dspy /app/src /app/src

# Set up environment
ENV PATH="/app/.venv/bin:$PATH" \
    PYTHONPATH="/app/src" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    LOG_LEVEL=INFO \
    MLFLOW_TRACKING_URI=http://mlflow-service:5000

# Switch to non-root user
USER dspy

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8002/api/v1/health/live || exit 1

# Expose port
EXPOSE 8002

# Start the application with production settings
CMD ["uvicorn", "agentcore.dspy_optimization.main:app", \
     "--host", "0.0.0.0", \
     "--port", "8002", \
     "--workers", "2", \
     "--loop", "uvloop", \
     "--log-level", "info", \
     "--proxy-headers", \
     "--forwarded-allow-ips", "*"]
